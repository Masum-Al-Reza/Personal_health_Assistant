<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:elevation="7dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:id="@+id/row_eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_callorytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_eventName"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_callory_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_callorytype"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_departureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_callory_budget"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/dateleft"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_departureDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-33dp"
            android:layout_marginEnd="120dp"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/row_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:text="&#8942;"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>