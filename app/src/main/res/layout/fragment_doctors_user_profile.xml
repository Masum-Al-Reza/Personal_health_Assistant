<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Medicine_User_profile_fragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="200dp"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter Medicine  name"
        android:id="@+id/Medicine_nameinput"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Medicine_type"
        android:hint="Enter types of medicine"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="select date"
        android:id="@+id/medicine_DAte_input"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Enter the time of taking medicine" />

    <CheckBox
        android:id="@+id/morningCB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Morning" />
    <CheckBox
        android:id="@+id/NoonCB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noon" />
    <CheckBox
        android:id="@+id/NightCB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="night" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveBtn"
        android:text="save"/>
    <Button
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/updateBTN"
        android:text="update"/>



</LinearLayout>


</LinearLayout>