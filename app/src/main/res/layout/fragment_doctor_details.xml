<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.doctors_gallery.Doctor_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/doctornameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doctortypeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/doctornumberTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/doctoremailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <ImageButton
            android:id="@+id/DoctorcallBTN"
            android:layout_width="62dp"
            android:layout_height="59dp"

            android:layout_marginEnd="70dp"
            android:layout_toStartOf="@+id/doctor_galleryBTN"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:src="@drawable/ic_call_black_24dp" />

        <ImageButton
            android:id="@+id/doctoremailBTN"
            android:layout_width="62dp"
            android:layout_height="64dp"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:src="@drawable/ic_email_black_24dp" />

        <ImageButton
            android:id="@+id/doctor_galleryBTN"
            android:layout_width="66dp"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="168dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:src="@drawable/ic_menu_gallery" />
    </RelativeLayout>


</LinearLayout>