<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".Consume.Diet_details">

    <androidx.cardview.widget.CardView
        android:layout_width="262dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_calloryTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_calloriesTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/initial_calloriesTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="call"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/remaining_calloriesTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="this"
                android:textSize="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:clipToPadding="false"

        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/addcalloryBTNs"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:elevation="6dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"


                android:orientation="vertical">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="Add callory"

                    android:textColorHighlight="@color/cardview_light_background"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/View_history2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:elevation="6dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:id="@+id/View_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="View history"

                    android:textColorHighlight="@color/cardview_light_background"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>