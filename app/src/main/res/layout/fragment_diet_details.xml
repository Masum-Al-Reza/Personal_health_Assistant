<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Consume.Diet_details">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_calloryTV"
         android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total_calloriesTV"
         android:textSize="20dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/initial_calloriesTV"
        android:textSize="20dp"
android:text="call"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remaining_calloriesTV"
          android:text="this"
        android:textSize="20dp"
        android:gravity="center"/>


    <LinearLayout
        android:layout_marginTop="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/addcalloryBTNs"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:elevation="6dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="Add callory"

                    android:textColorHighlight="@color/cardview_light_background"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:elevation="6dp"
            android:id="@+id/View_all_moviescard"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:id="@+id/View_movies_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="View history"

                    android:textColorHighlight="@color/cardview_light_background"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>