<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="Personal Health Assistent"
        android:textSize="40dp"
        android:textStyle="bold|italic" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/View_all_profiles"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:elevation="10dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="Profile"

                    android:textColorHighlight="@color/cardview_light_background"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/View_all_moviescard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:elevation="10dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:id="@+id/View_movies_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="Diet Panel"

                    android:textColorHighlight="@color/cardview_light_background"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/view_all_doctors"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"

            android:clickable="true"
            android:elevation="10dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="108dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="Medicine Reminder"

                    android:textColorHighlight="@color/cardview_light_background"
                    android:textSize="21sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/Watercv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="6dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:text="Water Alarm"

                        android:textColorHighlight="@color/cardview_light_background"
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>





    </LinearLayout>

</LinearLayout>